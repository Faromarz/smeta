{% for room in _rooms %}
        {% if room.type == 3  %}
            <div class="smeta_block" data-room-id="{{ room.id }}">
                <h1 class="smeta_text_header">Входная дверь</h1>
                <div class="smeta_characteristics">
                    <input id="{{ room.id }}_door_0_width" value="{{ room.door.width | number_format(2, ',', ' ') }}"/>
                    <div class="smeta_characteristics_x"></div>
                    <input id="{{ room.id }}_door_0_height" value="{{ room.door.height | number_format(2, ',', ' ') }}">
                    <p class="smeta_characteristics_width">ширина</p>
                    <p class="smeta_characteristics_height">высота</p>
                    <h6>Габариты в метрах</h6>
                </div>
                <div class="smeta_count_entrance_door"></div>
                <div class="ignore{{ room.door.enable ? '' : 'd'}}"></div>
            </div>
        {% endif %}
{% endfor %}
{% for room in _rooms %}
    {% if room.type != 3 and room.door.show  %}
        <div class="smeta_block smeta_door" data-room-id="{{ room.id }}">
            <h1 class="smeta_text_header">
                Дверь для 
                {{ room.type == 1 ? 'комнаты №' ~ +1 }}
                {{ room.type == 2 ? 'Кухни' }}
                {{ room.type == 4 ? 'Ванной' }}
                {{ room.type == 5 ? 'Туалета' }}
            </h1>

            <div class="smeta_count_interior_door_right">
                <input id="{{ room.id }}_door_0_width" value="{{ room.door.width | number_format(2, ',', ' ') }}"/>
                <div class="smeta_characteristics_x"></div>
                <input id="{{ room.id }}_door_0_height" value="{{ room.door.height | number_format(2, ',', ' ') }}">
                <p class="smeta_characteristics_width">ширина</p>
                <p class="smeta_characteristics_height">высота</p>
                <h6>Габариты в метрах</h6>
            </div>

            <div class="smeta_count_interior_door_left">
                <div class="smeta_count_interior_door_chosen" data-type="{{ room.door.width >= 1.3 ? 2 : 1 }}"></div>
            </div>
            <div class="ignore{{ room.door.enable ? '' : 'd'}} ignore_door"></div>
        </div>
    {% endif %}
{% endfor %}

{% for key,door in doors %}
    <div class="smeta_block smeta_door" data-door-key="{{ key }}" data-room-id="0"{% if door.show == false %} style="display:none"{% endif %}>
        <h1 class="smeta_text_header">
            Дверь межкомнатная{{ key+1 }}
        </h1>

        <div class="smeta_count_interior_door_right">
            <input id="0_door_{{key}}_width" value="{{ door.width | number_format(2, ',', ' ') }}"/>
            <div class="smeta_characteristics_x"></div>
            <input id="0_door_{{key}}_height" value="{{ door.height | number_format(2, ',', ' ') }}">
            <p class="smeta_characteristics_width">ширина</p>
            <p class="smeta_characteristics_height">высота</p>
            <h6>Габариты в метрах</h6>
        </div>

        <div class="smeta_count_interior_door_left">
            <div class="smeta_count_interior_door_chosen" data-type="{{ door.width >= 1.3 ? 2 : 1 }}"></div>
            <div class="button_minus"></div>
            <input class="smeta_count_input" value="{{ door.count }}" />
            <div class="button_plus"></div>
            <h6>шт.</h6>
        </div>
        <div class="ignore{{ door.enable ? '' : 'd'}} ignore_door"></div>
    </div>
{% endfor %}

<div id="add_door" class="add_room">Добавить дверь</div>
