{% extends "admin/index.twig" %}
{% block boody %}
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            Widget settings form goes here
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn blue">Save changes</button>
                            <button type="button" class="btn default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <div class="row">
                <div class="col-md-12">
                    <h3 class="page-title">
                        Комнаты <small>список комнат</small>
                    </h3>
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="{{ Url.site('/admin') }}">Рабочий стол</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="{{ Url.site('/admin/rooms') }}">Комнаты</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        <div class="portlet-body">
                            <div class="table-container">
                                <div class="btn-group" style="margin-bottom: 10px;">
                                    <a href="{{ Url.site('/admin/rooms/create') }}" id="sample_editable_1_new" class="btn green">
                                        Добавить <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                                <script>
                                    $(document).ready(function(){
                                        $('.admin-editable').editable({
                                            url: '/admin/rooms/save',
                                            source: '/admin/rooms/save',
                                            emptytext: 'Введите значение',
                                            select2: {
                                                placeholder: 'Введите значение',
                                                minimumInputLength: 2,
                                                width: 250
                                            }
                                        });
                                    });
                                </script>
                                <table class="table table-striped table-bordered table-hover" id='ajaxBlock'>
                                    <thead>
                                        <tr role="row" class="heading">
                                            <th width="5%">
                                                ID
                                            </th>
                                            <th width="15%">
                                                Тип
                                            </th>
                                            <th width="10%">
                                                Название
                                            </th>
                                            <th width="10%">
                                                Действия
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for room in _rooms %}
                                            <tr>
                                                <td>{{ room.id }}</td>
                                                <td><a href="#" data-type="text" id="type" data-pk="{{ room.id }}" data-title="Введите тип" class="editable editable-click admin-editable">{{ room.type }}</a></td>
                                                <td><a href="#" data-type="text" id="name" data-pk="{{ room.id }}" data-title="Введите название комнаты" class="editable editable-click admin-editable">{{ room.name }}</a></td>
                                                <td>
                                                    <a href="{{ Url.site('/admin/rooms/delete/' ~ room.id) }}"
                                                       class="btn default btn-xs black admin-delete"
                                                       data-question="Удалить?"
                                                       >
                                                        <i class="fa fa-trash-o"></i>
                                                        Удалить
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End: life time stats -->
                </div>
            </div>
            <!-- END PAGE CONTENT-->

{% endblock boody %}