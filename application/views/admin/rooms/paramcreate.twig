{% extends "admin/index.twig" %}
{% block boody %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title">
                Добавление <small>новые параметры</small>
            </h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ Url.site('/admin') }}">Рабочий стол</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ Url.site('/admin/rooms/param') }}">Параметры комнаты по умолчанию</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="">Новые параметры</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gift"></i>Новые параметры
                                </div>
                                <div class="tools">
                                    <a href="javascript:;" class="collapse"></a>
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <!-- BEGIN FORM-->
                                <form action="{{ Url.site('/admin/rooms/paramcreate') }}" class="form-horizontal form-row-seperated" method="post">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Название параметра</label>
                                            <div class="col-md-9">
                                                <input type="text" name="name" placeholder="Введите название параметра" class="form-control">
                                                <span class="help-block">Введите название параметра</span>
                                                {% if _errors.name is defined %}{{ _errors.name.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Ширина параметра</label>
                                            <div class="col-md-9">
                                                <input type="text" name="width" placeholder="Введите ширину параметра" class="form-control">
                                                <span class="help-block">Введите ширину параметра</span>
                                                {% if _errors.width is defined %}{{ _errors.width.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Мин. ширина</label>
                                            <div class="col-md-9">
                                                <input type="text" name="width_min" placeholder="Введите мин. ширину" class="form-control">
                                                <span class="help-block">Введите минимальную ширину</span>
                                                {% if _errors.width_min is defined %}{{ _errors.width_min.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Макс. ширина</label>
                                            <div class="col-md-9">
                                                <input type="text" name="width_max" placeholder="Введите макс. ширину" class="form-control">
                                                <span class="help-block">Введите максимальную ширину</span>
                                                {% if _errors.width_max is defined %}{{ _errors.width_max.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Высота параметра</label>
                                            <div class="col-md-9">
                                                <input type="text" name="height" placeholder="Введите ширину параметра" class="form-control">
                                                <span class="help-block">Введите высоту параметра</span>
                                                {% if _errors.height is defined %}{{ _errors.height.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Мин. высота параметра</label>
                                            <div class="col-md-9">
                                                <input type="text" name="height_min" placeholder="Введите мин. ширину" class="form-control">
                                                <span class="help-block">Введите минимальную высоту</span>
                                                {% if _errors.height_min is defined %}{{ _errors.height_min.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Макс. высота параметра</label>
                                            <div class="col-md-9">
                                                <input type="text" name="height_max" placeholder="Введите макс. ширину" class="form-control">
                                                <span class="help-block">Введите максимальную высоту</span>
                                                {% if _errors.height_max is defined %}{{ _errors.height_max.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions fluid">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn green"><i class="fa fa-pencil"></i> Добавить</button>
                                                    <a href="{{ Url.site('/admin/category') }}" class="btn default">Отмена</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <!-- END FORM-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
    <!-- END PAGE CONTENT-->

{% endblock boody %}