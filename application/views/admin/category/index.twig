{% extends "admin/index.twig" %}
{% block boody %}
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            Widget settings form goes here
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn blue">Save changes</button>
                            <button type="button" class="btn default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <div class="row">
                <div class="col-md-12">
                    <h3 class="page-title">
                        Категории <small>список категорий</small>
                    </h3>
                    <ul class="page-breadcrumb breadcrumb">
                        <li>
                            <i class="fa fa-home"></i>
                            <a href="{{ Url.site('/admin') }}">Рабочий стол</a>
                            <i class="fa fa-angle-right"></i>
                        </li>
                        <li>
                            <a href="{{ Url.site('/admin/category') }}">Категории</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet">
                        <div class="portlet-body">
                            <div class="table-container">
                                <div class="btn-group" style="margin-bottom: 10px;">
                                    <a href="{{ Url.site('/admin/category/create') }}" id="sample_editable_1_new" class="btn green">
                                        Добавить <i class="fa fa-plus"></i>
                                    </a>
                                </div>
                                <script>
                                    $(document).ready(function(){
                                        $('.admin-editable').editable({
                                            url: '/admin/category/save',
                                            source: '/admin/category/save',
                                            emptytext: 'Введите значение',
                                            select2: {
                                                placeholder: 'Введите значение',
                                                minimumInputLength: 2,
                                                width: 250
                                            }
                                        });
                                    });
                                </script>
                                <table class="table table-striped table-bordered table-hover" id='ajaxBlock'>
                                    <thead>
                                        <tr role="row" class="heading">
                                            {#<th width="5%">
                                                Картинка
                                            </th>#}
                                            <th width="45%">
                                                Название
                                            </th>
                                            {#<th width="10%">
                                                Title картинки
                                            </th>
                                            <th width="10%">
                                                Alt картинки
                                            </th>#}
                                            <th width="10%">
                                                Действия
                                            </th>
                                            <th width="45%">
                                                Статьи
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for cat in _categories %}
                                            <tr>
                                                {#<td>
                                                    {% if cat.img %}
                                                        <img style="max-width:114px;" src="{{ Url.media('/media/img/cat/' ~ cat.img) }}">
                                                    {% endif %}
                                                    <script>
                                                        $(document).ready(function(){
                                                            $(function () {
                                                                $('#fileupload{{cat.id}}').fileupload({

                                                                dataType: 'json',
                                                                fail: function (e, data) {
                                                                    alert('Error upload');
                                                                },
                                                                done: function (e, data) {
                                                                    $(this).parents('td').find('img').remove();
                                                                    $(this).parents('td').prepend('<img style="max-width:114px;" src="/media/img/cat/'+data.result.file+'?v='+ Math.random()+'" />');
                                                                    alert('Изобржаение загружено');
                                                                    //$.each(data.result.files, function (index, file) {
                                                                       // $('<p/>').text(file.name).appendTo('#files');

                                                                   // });
                                                                },
                                                                add: function (e, data) {
                                                                    if(confirm('Загрузить новое изображение? Старое будет удалено.')){data.submit();}
                                                                }
                                                                }).prop('disabled', !$.support.fileInput)
                                                                    .parent().addClass($.support.fileInput ? undefined : 'disabled');
                                                            });
                                                        });
                                                    </script>
                                                    <span class="btn btn-success fileinput-button">
                                                        <i class="glyphicon glyphicon-plus"></i>
                                                        <span>{% if cat.img is not empty %}Изменить{% else %}Загрузить{% endif %}</span>
                                                        <input id="fileupload{{cat.id}}" type="file" name="img" data-url="/admin/category/saveimg/{{ cat.id }}">
                                                    </span>
                                                </td>#}
                                                <td{% if cat.lvl == 1 %} style="font-weight:bold"{% endif %}>{{ cat.getEmptyLvl() }}<a href="#" data-type="text" id="name" data-pk="{{ cat.id }}" data-title="Введите название" class="editable editable-click admin-editable">{{ cat.name }}</a></td>
                                                {#<td><a href="#" data-type="text" id="img_title" data-pk="{{ cat.id }}" data-title="Введите альтернативное название картинки" class="editable editable-click admin-editable">{{ cat.img_title }}</a></td>
                                                <td><a href="#" data-type="text" id="img_alt" data-pk="{{ cat.id }}" data-title="Введите название картинки" class="editable editable-click admin-editable">{{ cat.img_alt }}</a></td>
                                                #}<td>
                                                    <a href="{{ Url.site('/admin/category/delete/' ~ cat.id) }}"
                                                       class="btn default btn-xs black admin-delete"
                                                       data-question="Удалить?"
                                                       >
                                                        <i class="fa fa-trash-o"></i>
                                                        Удалить
                                                    </a>
                                                </td>
                                                <td>
                                                    {% if cat.has_children != true %}
                                                    <div class="btn-group" style="margin-bottom: 10px;">
                                                        <a href="{{ Url.site('/admin/article/create?cat=' ~ cat.id) }}" class="btn green">
                                                            Добавить статью <i class="fa fa-plus"></i>
                                                        </a>
                                                    </div>
                                                    {% endif %}
                                        
                                                    <table class="table table-striped table-bordered table-hover">
                                                    {% for article in cat.articles.find_all() %}
                                                        <tr>
                                                            <td>{{ article }}</td>
                                                            <td style="width: 75px !important;vertical-align: middle;cursor: pointer">
                                                                <a 
                                                                   title="Редактировать"
                                                                    class="btn default btn-xs blackr"
                                                                    href="{{ Url.site('/admin/article/edit/' ~ article.id) }}"
                                                                    >
                                                                     <i class="fa fa-edit"></i>
                                                                </a>
                                                                <a href="#"
                                                                    class="btn default btn-xs black admin-delete-ajax-tr"
                                                                    data-question="Удалить статью: '{{ article }}'?"
                                                                    data-url="{{ Url.site('/admin/article/delete_ajax/' ~ article.id) }}"
                                                                    title="Удалить"
                                                                    >
                                                                     <i class="fa fa-trash-o"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </table>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- End: life time stats -->
                </div>
            </div>
            <!-- END PAGE CONTENT-->

{% endblock boody %}
