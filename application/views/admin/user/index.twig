                        <td>{{ item.last_login |date('Y.m.d H:i')}}</td>
                        <td>{{ item.logins }}</td>
                        <td><a href="#" data-type="checklist" id="role_ids" data-pk="{{ item.id }}" data-value="{{ item.roles.find_all() |join(',') }}" data-title="Укажите роль" class="editable editable-click admin-editable-user-role_ids"></a></td>
                    </tr>
