{% extends "admin/index.twig" %}
{% block boody %}
    <script>
        $(document).ready(function(){
            $(".repair-pate").select2({
                placeholder: "Выберите тип ремонта",
                allowClear: true,
                multiple: true,
                tokenSeparators: [",", " "],
                tags: ['1_1', 0],
                data: [
                    {id: '1_1', text: 'Косметический-эконом'},
                    {id: '1_2', text: 'Косметический-стандарт'},
                    {id: '1_3', text: 'Косметический-премиум'},
                    {id: '2_1', text: 'Капитальный-эконом'},
                    {id: '2_2', text: 'Капитальный-стандарт'},
                    {id: '2_3', text: 'Капитальный-премиум'}
                ]
            });
        });
    </script>
    <div class="row">
        <div class="col-md-12">
            <h3 class="page-title">
                Добавление <small>новая категория</small>
            </h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="{{ Url.site('/admin') }}">Рабочий стол</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="{{ Url.site('/admin/materials/cat') }}">Категории</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="">Новая категория</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet">
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="portlet box blue">
                            <div class="portlet-title">
                                <div class="caption">
                                    <i class="fa fa-gift"></i>Новая категория
                                </div>
                                <div class="tools">
                                    <a href="javascript:;" class="collapse"></a>
                                </div>
                            </div>
                            <div class="portlet-body form">
                                <!-- BEGIN FORM-->
                                <form action="{{ Url.site('/admin/materials/catcreate') }}" class="form-horizontal form-row-seperated" method="post" enctype="multipart/form-data">
                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Категория</label>
                                            <div class="col-md-9">
                                                 <select name="parent_id" class="form-control">
                                                    <option value="">Новая категория</option>
                                                    {% for cat in _categories %}
                                                        <option value="{{ cat.id }}">{{ cat.getEmptyLvl}}{{ cat.name}}</option>
                                                    {% endfor %}
                                                </select>
                                                <span class="help-block">Укажите категорию</span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Название</label>
                                            <div class="col-md-9">
                                                <input type="text" name="name" placeholder="Введите название" class="form-control">
                                                <span class="help-block">Введите название категории</span>
                                                {% if _errors.name is defined %}{{ _errors.name.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Типы ремонта</label>
                                            <div class="col-md-9">
                                                <input type="text" name="repair_id_rate_id" placeholder="Укажите типы ремонтов" class="form-control repair-pate">
                                                <span class="help-block">Укажите типы ремонтов в каких будут отобржаться категории материалов</span>
                                                {% if _errors.repair_id_rate_id is defined %}{{ _errors.repair_id_rate_id.0 | raw('html') }}{% endif %}
                                            </div>
                                        </div>
  
                                    <div class="form-actions fluid">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-offset-3 col-md-9">
                                                    <button type="submit" class="btn green"><i class="fa fa-pencil"></i> Добавить</button>
                                                    <a href="{{ Url.site('/admin/materials/cat') }}" class="btn default">Отмена</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <!-- END FORM-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
    <!-- END PAGE CONTENT-->

{% endblock boody %}